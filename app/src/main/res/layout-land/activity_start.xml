<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/start_screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/start_welcome_txt_margin_bottom"
            android:layout_marginTop="@dimen/start_logo_margin_top"
            android:text="@string/welcome_to_chatapp"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="@dimen/start_welcome_txt_textSize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/start_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/start_login_btn_margin_bottom"
            android:backgroundTint="@color/colorAccent"
            android:paddingEnd="@dimen/start_login_btn_padding_right"
            android:paddingStart="@dimen/start_login_btn_padding_left"
            android:text="@string/already_have_account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/start_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="@dimen/start_reg_btn_margin_bottom"
            android:backgroundTint="@android:color/white"
            android:paddingEnd="@dimen/start_reg_btn_padding_right"
            android:paddingStart="@dimen/start_reg_btn_padding_left"
            android:text="@string/need_a_new_account"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
             />

    </LinearLayout>

</LinearLayout>